{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS", // <-- IMPORTANT if you're not using "type": "module"
    "moduleResolution": "node",
    "esModuleInterop": true, // <-- allows `import` syntax with CommonJS
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./",
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
