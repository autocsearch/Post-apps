{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS", // <-- IMPORTANT if you're not using "type": "module"
    "moduleResolution": "node",
    "esModuleInterop": true, // <-- allows `import` syntax with CommonJS
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
